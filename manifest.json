{
    "manifest_version": 3,
    "name": "Find Product from Image",
    "version": "1.0",
    "description": "This is an extension to find product from image on Amazon, Aliexpress etc.",
    "permissions": [
      "contextMenus", 
      "activeTab",     
      "tabs"           
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  